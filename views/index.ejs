<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
      color: #333;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
      color: #444;
    }

    .container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin: 15px 0 5px;
      font-weight: bold;
    }

    input[type="text"], textarea {
      width: calc(100% - 20px);
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 16px;
    }

    textarea {
      resize: none;
    }

    button {
      display: block;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      color: #fff;
      background-color: #4CAF50;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #45a049;
    }

    .footer {
      position: fixed;
      bottom: 0;
      width: 100%;
      background-color: #333;
      color: #fff;
      text-align: center;
      padding: 10px 0;
      font-size: 14px;
    }

    .footer p {
      margin: 0;
    }
  </style>
</head>
<body>
  <h1><%= message %></h1>
  <div class="container">
    <label for="spins">Select Number of Spins:</label>
    <input type="text" id="spins" placeholder="Enter number of spins">
    <label for="instance">Select Number of Instances:</label>
    <input type="text" id="instance" placeholder="Enter gameId">
    <label for="gameId">Select Game Id:</label>
    <input type="text" id="gameId" placeholder="Enter gameId">
    <label for="ids">IDs:</label>
    <textarea id="ids" placeholder="Enter IDs (comma-separated)" rows="12"></textarea>
    <button id="startButton">Start</button>
  </div>
  <div class="footer">
    <p>&copy; 2025 Underpin Services. All rights reserved.</p>
  </div>
  <script>
   document.getElementById("startButton").addEventListener("click", async () => {
  const spins = document.getElementById("spins").value;
  const instance = document.getElementById("instance").value;
  const ids = document.getElementById("ids").value; 
const gameId=document.getElementById("gameId").value
  console.log({ spins, instance, ids,gameId }); 

  try {
    const response = await fetch("/open-pages", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        spins,
        instance,
        ids,
      }),
    });

    if (response.ok) {
      const result = await response.text();
      // alert("Success: " + result);
    } else {
      const error = await response.text();
      alert("Error: " + error);
    }
  } catch (error) {
    console.error("Error:", error);
    alert("An unexpected error occurred.");
  }
});

  </script>
</body>
</html>
